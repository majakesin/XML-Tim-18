<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>

        <RollingFile
                name="FileAuth"
                fileName="logs/ChatLogs/infoAuth.log"
                filePattern="logs/ChatLogs/infoAuth.%i.log.gz"
                ignoreExceptions="false">
            <PatternLayout>
                <Pattern>%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <OnStartupTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10MB" />

            </Policies>
            <DefaultRolloverStrategy max="10" />
        </RollingFile>


        <RollingFile
                name="RootFile"
                fileName="logs/ChatLogs/rootLogsFile.log"
                filePattern="logs/ChatLogs/rootLogsFile.%i.log.gz"
                ignoreExceptions="false">
            <PatternLayout>
                <Pattern>%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <OnStartupTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="20MB" />

            </Policies>
            <DefaultRolloverStrategy max="10" />
        </RollingFile>
        <RollingFile
                name="DebugFile"
                fileName="logs/ChatLogs/rootDebugFile.log"
                filePattern="logs/ChatLogs/rootDebugFile.%i.log.gz"
                ignoreExceptions="false">
            <PatternLayout>
                <Pattern>%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <OnStartupTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="20MB" />

            </Policies>
            <DefaultRolloverStrategy max="10" />
        </RollingFile>
    </Appenders>
    <!-- Rolling File Appender -->

    <Loggers>
        <Root level="info">
            <AppenderRef ref="RootFile" level="info"/>
            <AppenderRef ref="Console" />
        </Root>
        <Logger name="AuthLogger" level="info" additivity="false">
            <appender-ref ref="FileAuth" level="info"/>
            <!--<AppenderRef ref="Console" />-->
        </Logger>
        <Logger name="DebugLogger" level="debug" additivity="false">
            <appender-ref ref="DebugFile" level="debug"/>

        </Logger>

    </Loggers>
</Configuration>
